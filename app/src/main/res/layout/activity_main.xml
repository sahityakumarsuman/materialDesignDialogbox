<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    android:orientation="vertical"
    tools:context="an.materialdesign.MainActivity">

    <Button
        android:id="@+id/materialDesingDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Dialog" />


    <Button
        android:id="@+id/social_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Media" />

    <Button
        android:id="@+id/materialDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Desing" />


    <Button
        android:id="@+id/profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Profile" />

    <Button
        android:id="@+id/revalAmintaion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reval Animation" />




</LinearLayout>
